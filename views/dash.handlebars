<section>
    <h1 class="ml-3">Dashboard</h1>
    {{!-- create new post --}}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form id="userId" data="{{postObject.userId}}">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="new-title" name="title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="body">Body</label>
                            <textarea class="form-control" id="new-body" name="body" rows="3"></textarea>
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        {{#each postObject}}
        {{!-- id, title, body, user, comments.id, comments.body, comments.user --}}
        <div class="col-md-12 mt-3">
            <div class="card">
                <div class="card-body">
                    <a class="h5" href="/post/{{id}}">{{title}}</a>
                    <div class="h7 text-muted">{{user}}</div>
                    <div class="h7">Posted: {{timestamp}}</div>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{body}}</li>
                </ul>
            </div>
        </div>
        {{/each}}

</section>
<script src="./js/dash.js"></script>